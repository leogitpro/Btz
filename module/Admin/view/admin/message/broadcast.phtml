        if ($key == \Zend\Validator\StringLength::TOO_LONG) {
            $localMessages[$key] = '消息内容太长了哦!';
            unset($inputMessages[$key]);
            continue;
        }
    }
}
//var_dump($inputMessages);
if (!empty($localMessages)) {
    $input->setMessages(array_merge($inputMessages, $localMessages));
}


